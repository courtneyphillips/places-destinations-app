
<h1 class="text-center">Where have you been?</h1>

  <div class= "row">
    <div class = "col-sm-6">
    <ul>
      <% @places.each() do |place| %>
      <li><%= place.destination() %></li>
      <% end %>
    </ul>
  </div>


  <div class = "col-sm-6">
<div class="form">
  <form action="/places" method="post">
    <div class="form-group">
      <label for="place">Enter your destination:</label>
      <input type="text" id="place" name="place">
    </div>

    <button class="btn btn-danger" action="submit">add</button>
</div>
  </form>
</div>
</div>
